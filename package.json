{
  "name": "uui-monorepo",
  "version": "0.0.1",
  "description": "A library of UI-components, build with love from Umbraco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/umbraco/Umbraco.UI.git"
  },
  "bugs": {
    "url": "https://github.com/umbraco/Umbraco.UI/issues"
  },
  "homepage": "https://github.com/umbraco/Umbraco.UI/#readme",
  "keywords": [
    "umbraco",
    "backoffice",
    "web-components",
    "shadow-dom",
    "custom-elements"
  ],
  "scripts": {
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "storybook": "npm run analyze && start-storybook -p 6006",
    "storybook:build": "npm run analyze && npm run build && build-storybook",
    "analyze": "web-component-analyzer **/*.element.ts --outFile custom-elements.json",
    "test": "npm run build && web-test-runner --coverage",
    "test:watch": "web-test-runner \"**/packages/**/src/**/*.test.ts\" --node-resolve --watch",
    "css": "postcss src/style --base src --dir out-css",
    "build": "npm run clean && lerna run build",
    "clean": "lerna run clean",
    "build:css": "lerna run build:css",
    "lerna:analyze": "lerna run analyze",
    "lerna:publish": "npm run build && lerna publish from-package && npm run lerna-fix",
    "lerna:version-patch": "lerna version patch",
    "diff": "lerna diff",
    "lerna-fix": "lerna exec -- node ../../scripts/lerna-fix.mjs",
    "postinstall": "npm run bootstrap",
    "bootstrap": "node ./scripts/generate-ts-config.js"
  },
  "engines": {
    "node": ">=16.8.0",
    "npm": ">= 7.21.0"
  },
  "dependencies": {
    "lit": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/web-components": "^6.3.8",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "@web/dev-server-esbuild": "^0.2.14",
    "@web/test-runner": "^0.13.17",
    "autoprefixer": "^10.3.6",
    "babel-loader": "^8.2.2",
    "esbuild": "^0.12.28",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-lit": "^1.5.1",
    "eslint-plugin-lit-a11y": "^1.1.0-next.1",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.0",
    "postcss": "^8.3.9",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-cli": "^9.0.1",
    "postcss-color-function": "^4.1.0",
    "postcss-custom-properties": "^12.0.0",
    "postcss-custom-properties-fallback": "^1.0.1",
    "postcss-jsx": "^0.36.4",
    "postcss-syntax": "^0.36.2",
    "postcss-values-parser": "^6.0.0",
    "prettier": "2.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-dts": "^4.0.0",
    "rollup-plugin-esbuild": "^4.5.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-typescript2": "^0.30.0",
    "storybook-builder-vite": "0.0.12",
    "typescript": "^4.3.2",
    "vite": "^2.5.2",
    "vite-tsconfig-paths": "^3.3.14",
    "web-component-analyzer": "^1.1.6"
  },
  "workspaces": [
    "./packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
