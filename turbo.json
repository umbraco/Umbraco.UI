{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "tsconfig.json",
    "package.json",
    "package-lock.json",
    "src/rollup-package.config.mjs"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "lib/**/*.js",
        "lib/**/*.d.ts",
        "dist/**",
        "custom-elements.json"
      ],
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false,
      "outputLogs": "none"
    },
    "analyze": {
      "inputs": ["lib/**/*.element.ts"],
      "outputs": ["custom-elements.json"]
    }
  }
}
