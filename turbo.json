{
  "$schema": "https://turborepo.dev/schema.json",
  "globalDependencies": [
    "tsconfig.json",
    "package.json",
    "package-lock.json",
    "packages/rollup-package.config.mjs",
    "scripts/processLitCSSPlugin.mjs",
    "scripts/postcss-custom-properties-fallback/plugin.mjs",
    "packages/uui-css/custom-properties.module.js"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "lib/**/*.ts",
        "lib/**/*.css",
        "!lib/**/*.test.ts",
        "!lib/**/*.story.ts",
        "rollup.config.js",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [
        "lib/**/*.js",
        "lib/**/*.d.ts",
        "dist/**",
        "custom-elements.json"
      ],
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false,
      "outputLogs": "none"
    },
    "analyze": {
      "inputs": ["lib/**/*.element.ts"],
      "outputs": ["custom-elements.json"]
    }
  }
}
