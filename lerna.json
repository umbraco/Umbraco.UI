{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "version": "1.8.0",
  "preid": "rc",
  "exact": true,
  "noPush": true,
  "npmClient": "npm",
  "useWorkspaces": true,
  "includeMergedTags": true,
  "conventionalCommits": true,
  "command": {
    "publish": {
      "verifyAccess": false
    }
  },
  "ignoreChanges": ["**/*.story.ts", "**/*.test.ts", "**/*.md"]
}
